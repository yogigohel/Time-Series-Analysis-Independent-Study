Sub CreateSlicerForPivotChart()

    Dim ws As Worksheet
    Dim pvtChart As ChartObject
    Dim pvtTable As PivotTable
    Dim slicerCache As SlicerCache

    ' Select the Dashboard sheet
    Set ws = ThisWorkbook.Sheets("Dashboard")
    ws.Select
    
    ' Find the PivotChart named "WeightByIndustry"
    Set pvtChart = ws.ChartObjects("WeightByIndustry")
    
    ' Ensure the chart has a pivot table associated with it
    If Not pvtChart.Chart.PivotLayout Is Nothing Then
        ' Get the PivotTable associated with the PivotChart
        Set pvtTable = pvtChart.Chart.PivotLayout.PivotTable
        
        ' Create a slicer for the "Sector/Focus" field
        Set slicerCache = ThisWorkbook.SlicerCaches.Add(pvtTable, "Sector/Focus")
        
        ' Add the slicer to the "Dashboard" sheet
        slicerCache.Slicers.Add ws, , "Sector/Focus", "Sector/Focus", 100, 100, 200, 200
        
    Else
        MsgBox "The chart 'WeightByIndustry' does not have a PivotTable associated with it.", vbExclamation
    End If

End Sub