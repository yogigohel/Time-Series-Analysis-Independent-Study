Sub CopyChartAndSlicer()

    ' Define variables for sheets
    Dim wsSource As Worksheet
    Dim wsDest As Worksheet
    Dim chartObj As ChartObject
    Dim slicerCache As SlicerCache
    Dim slicer As Slicer
    Dim targetRange As Range

    ' Set source and destination sheets
    Set wsSource = ThisWorkbook.Sheets("SectorData")
    Set wsDest = ThisWorkbook.Sheets("Dashboard")
    
    ' Copy the chart named "WeightByIndustry" from SectorData to Dashboard
    Set chartObj = wsSource.ChartObjects("WeightByIndustry")
    
    ' Paste the chart at cell A1 on the Dashboard sheet
    chartObj.Copy
    wsDest.Paste Destination:=wsDest.Range("A1")
    
    ' Get the pasted chart (last one on the sheet)
    Dim pastedChart As ChartObject
    Set pastedChart = wsDest.ChartObjects(wsDest.ChartObjects.Count)
    
    ' Resize and reposition the pasted chart
    With pastedChart
        .Left = .Left - 33.5714173228
        .Top = .Top - 87.1428346457
        .Width = .Width * 1.099981598
    End With
    
    ' Find the SlicerCache associated with the slicer "Sector/Focus"
    For Each slicerCache In ThisWorkbook.SlicerCaches
        If slicerCache.Slicers.Count > 0 Then
            If slicerCache.Slicers(1).Name = "Sector/Focus" Then
                ' Create a new slicer on the Dashboard sheet and link it to the same SlicerCache
                Set targetRange = wsDest.Range("A1").Offset(0, pastedChart.Width / wsDest.Cells(1, 1).Width + 2)
                
                slicerCache.Slicers.Add SlicerDestination:=wsDest, _
                                        Name:="Sector/Focus", _
                                        Caption:="Sector/Focus", _
                                        Top:=targetRange.Top, _
                                        Left:=targetRange.Left, _
                                        Width:=slicerCache.Slicers(1).Width, _
                                        Height:=slicerCache.Slicers(1).Height
                Exit For
            End If
        End If
    Next slicerCache
    
    ' Clean up
    Application.CutCopyMode = False

End Sub